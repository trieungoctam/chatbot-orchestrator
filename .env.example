# ===============================================
# CHAT ORCHESTRATOR - ENVIRONMENT CONFIGURATION
# ===============================================

# ===============================================
# APPLICATION SETTINGS
# ===============================================
APP_NAME="Chat Orchestrator"
APP_VERSION="1.0.1"
APP_DESCRIPTION="Chat Orchestrator Core Backend"
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8386
WORKERS=1

# API Documentation
ENABLE_DOCS=true
DOCS_URL="/docs"
REDOC_URL="/redoc"
HEALTH_CHECK_PATH="/health"

# ===============================================
# DATABASE CONFIGURATION (DB_)
# ===============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chat_orchestrator
DB_USER=postgres
DB_PASSWORD=postgres
DB_DRIVER=postgresql+asyncpg

# Connection Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Database Settings
DB_ECHO=false
DB_HEALTH_CHECK_TIMEOUT=5

# ===============================================
# AI SERVICE CONFIGURATION (AI_)
# ===============================================

# Timeout and Retry Settings
AI_TIMEOUT_SECONDS=30
AI_MAX_RETRIES=3
AI_RETRY_DELAY=1.0

# Rate Limiting
AI_RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Content Safety
AI_ENABLE_CONTENT_FILTERING=true

# Feature Flags
AI_ENABLE_STREAMING=false

# ===============================================
# PLATFORM SERVICE CONFIGURATION (PLATFORM_)
# ===============================================

# Common Platform Settings
PLATFORM_TIMEOUT_SECONDS=30
PLATFORM_MAX_RETRIES=3
PLATFORM_RATE_LIMIT_REQUESTS_PER_MINUTE=60

# ===============================================
# NOTIFICATION SERVICE CONFIGURATION (NOTIFICATION_)
# ===============================================

# Notification Service Settings
NOTIFICATION_TIMEOUT_SECONDS=30
NOTIFICATION_MAX_RETRIES=3

# ===============================================
# CACHE CONFIGURATION (CACHE_)
# ===============================================
CACHE_REDIS_HOST=localhost
CACHE_REDIS_PORT=6379
CACHE_REDIS_DB=0
CACHE_REDIS_PASSWORD=
CACHE_REDIS_USERNAME=

# Redis Connection Settings
CACHE_REDIS_MAX_CONNECTIONS=10
CACHE_REDIS_SOCKET_TIMEOUT=30
CACHE_REDIS_CONNECTION_TIMEOUT=10

# Cache TTL Settings (seconds)
CACHE_DEFAULT_TTL=3600
CACHE_CONVERSATION_TTL=86400
CACHE_SESSION_TTL=1800

# Cache Feature Flags
CACHE_ENABLE_CACHE=true
CACHE_ENABLE_CACHE_COMPRESSION=true

# ===============================================
# LOGGING CONFIGURATION (LOG_)
# ===============================================
LOG_LEVEL=INFO
LOG_ROOT_LEVEL=WARNING

# Log Format
LOG_FORMAT_JSON=true
LOG_INCLUDE_TIMESTAMP=true
LOG_INCLUDE_TRACE_ID=true

# Log Destinations
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=false
LOG_FILE_PATH=logs/chat_orchestrator.log
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_BACKUP_COUNT=5

# External Logging
LOG_SENTRY_DSN=your-sentry-dsn-here
LOG_ENABLE_SENTRY=false

# ===============================================
# SECURITY CONFIGURATION (SECURITY_)
# ===============================================

# Secret Keys (CHANGE IN PRODUCTION!)
SECURITY_SECRET_KEY=dev-secret-key-change-in-production
SECURITY_JWT_SECRET_KEY=jwt-secret-key-change-in-production

# JWT Settings
SECURITY_JWT_ALGORITHM=HS256
SECURITY_JWT_EXPIRATION_HOURS=24

# API Keys (CHANGE IN PRODUCTION!)
SECURITY_ADMIN_API_KEYS=dev-admin-key-1,dev-admin-key-2
SECURITY_PLATFORM_ACCESS_TOKEN=dev-platform-token

# CORS Settings
SECURITY_CORS_ORIGINS=*
SECURITY_CORS_ALLOW_CREDENTIALS=true
SECURITY_CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
SECURITY_CORS_ALLOW_HEADERS=*

# Rate Limiting
SECURITY_ENABLE_RATE_LIMITING=true
SECURITY_RATE_LIMIT_REQUESTS_PER_MINUTE=100
SECURITY_RATE_LIMIT_BURST=200

# Trusted Hosts
SECURITY_TRUSTED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ===============================================
# DEVELOPMENT SPECIFIC SETTINGS
# ===============================================

# For development, you might want to override some settings
# Uncomment and modify as needed:

# Override for local development
# DB_HOST=localhost
# CACHE_REDIS_HOST=localhost

# For Docker Compose development
# DB_HOST=postgres
# CACHE_REDIS_HOST=redis

# ===============================================
# PRODUCTION NOTES
# ===============================================
#
# For production deployment, make sure to:
# 1. Change ENVIRONMENT to "production"
# 2. Set DEBUG to false
# 3. Use strong secret keys
# 4. Configure proper database credentials
# 5. Set up proper CORS origins
# 6. Enable Sentry for error tracking
# 7. Use environment-specific values for all services
# 8. Review all security settings
#
# ===============================================